<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    EXAMPLE 1 -->
    <!--    CRIAR TRANSITION -->
    <!--    CRIAR CONSTRAINT SETS START E END -->
    <!--    CUSTOMIZAR TAMANHO NO ESTADO FINAL -->
    <!--    BUG CONSTRAINTS IMPORT ALL -->
    <!--    ADICIONAR VARIACAO DE COR  -->

    <!--    EXAMPLE 2 -->
    <!--    ADICIONAR KEYFRAME PERCENTX -.3, FRAME 30-->

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="250"
        app:motionInterpolator="easeInOut">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/square" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="60"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/mini_fab1"
                app:percentWidth="0"
                app:percentX="0"
                app:percentY="0" />

            <KeyPosition
                app:framePosition="40"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/mini_fab2"
                app:percentWidth="0"
                app:percentX="0"
                app:percentY="0" />

            <KeyPosition
                app:framePosition="20"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/mini_fab3"
                app:percentWidth="0"
                app:percentX="0"
                app:percentY="0" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start" />

    <ConstraintSet
        android:id="@+id/end"
        app:deriveConstraintsFrom="@id/start">

        <Constraint android:id="@id/mini_fab1">
            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintCircle="@id/square"
                app:layout_constraintCircleAngle="-80"
                app:layout_constraintCircleRadius="120dp" />
        </Constraint>

        <Constraint android:id="@id/mini_fab2">
            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintCircle="@id/square"
                app:layout_constraintCircleAngle="-40"
                app:layout_constraintCircleRadius="120dp" />
        </Constraint>

        <Constraint android:id="@id/mini_fab3">
            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintCircle="@id/square"
                app:layout_constraintCircleAngle="0"
                app:layout_constraintCircleRadius="120dp" />
        </Constraint>

    </ConstraintSet>
</MotionScene>
